<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Box?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="2">
    <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
    </columnConstraints>
        <VBox fx:id="detailsCard" alignment="CENTER" prefHeight="300" styleClass="normal-card" spacing="2"
              GridPane.rowIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="name" text="\$first" styleClass="bigger_student_name" />
            </HBox>
            <Label fx:id="groupName" styleClass="bigger_group_name" text="\$groupName" />
            <VBox alignment="CENTER" spacing="1">
                <HBox alignment="CENTER" spacing="5">
                    <ImageView preserveRatio="true" fitHeight="20" fitWidth="20" >
                        <Image url="/images/telegram.png"></Image>
                    </ImageView>
                    <Label fx:id="telegramHandle" styleClass="student_details" text="\$telegramHandle" />
                </HBox>
                <HBox alignment="CENTER" spacing="5">
                    <ImageView preserveRatio="true" fitHeight="20" fitWidth="20" >
                        <Image url="/images/email.png"></Image>
                    </ImageView>
                    <Label fx:id="email" styleClass="student_details" text="\$email" />
                </HBox>
            </VBox>
        </VBox>
        <Box height="10" GridPane.rowIndex="1"/>
        <VBox fx:id="noteCard" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS" prefHeight="500" GridPane.rowIndex="2" >
            <TextArea fx:id="notes" editable="false" wrapText="true" prefHeight="490" styleClass="student_details"/>
        </VBox>
    </GridPane>
</VBox>
