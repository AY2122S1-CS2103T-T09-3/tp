<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>

<VBox id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <VBox fx:id="detailsCard" alignment="CENTER" prefHeight="200" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <Label fx:id="telegramHandle" styleClass="cell_small_label" text="\$telegramHandle" />
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
            <Label fx:id="groupName" styleClass="cell_small_label" text="\$groupName" />
        </VBox>
        <VBox fx:id="noteCard" alignment="CENTER_LEFT" prefWidth="400" VBox.vgrow="ALWAYS">
            <TextArea fx:id="notes" editable="false" wrapText="true"/>
        </VBox>
</VBox>