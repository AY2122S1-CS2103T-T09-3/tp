<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <VBox fx:id="detailsCard" alignment="CENTER" prefHeight="200" GridPane.columnIndex="0" styleClass="normal-card" spacing="5">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="name" text="\$first" styleClass="bigger_label" />
            </HBox>
            <Label fx:id="groupName" styleClass="cell_small_label" text="\$groupName" />
            <VBox alignment="CENTER" spacing="1">
                <HBox alignment="CENTER" spacing="5">
                    <ImageView preserveRatio="true" fitHeight="15" fitWidth="15" >
                        <Image url="/images/telegram.png"></Image>
                    </ImageView>
                    <Label fx:id="telegramHandle" styleClass="cell_small_label" text="\$telegramHandle" />
                </HBox>
                <HBox alignment="CENTER" spacing="5">
                    <ImageView preserveRatio="true" fitHeight="15" fitWidth="15" >
                        <Image url="/images/email.png"></Image>
                    </ImageView>
                    <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
                </HBox>
            </VBox>
        </VBox>
        <VBox fx:id="noteCard" alignment="CENTER_LEFT" prefWidth="400" VBox.vgrow="ALWAYS">
            <TextArea fx:id="notes" editable="false" wrapText="true"/>
        </VBox>
</VBox>
